<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.CoffeeShop" parent="Base.Theme.CoffeeShop">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--    Button-->
    <style name="btnSignUp" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/corner_field</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Button.Small" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/offBlack</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/_12dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="fontFamily">@font/sora_regular</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/_1dp</item>
        <item name="android:minHeight">@dimen/_27dp</item>
    </style>

<!--    Corner ImageView-->
    <style name="roundedImageView16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_16dp</item>
    </style>

    <style name="roundedImageView12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12dp</item>
    </style>

    <style name="roundedImageView14" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_14dp</item>
    </style>

    <!--    Chip Text-->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">@dimen/_12dp</item>
        <item name="chipStartPadding">@dimen/_16dp</item>
        <item name="chipEndPadding">@dimen/_16dp</item>
        <item name="chipMinHeight">38dp</item>
    </style>

    <!--    EditText-->
    <style name="etPassword" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColorHint">@color/textPlace</item>
        <item name="android:textSize">@dimen/_14dp</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/corner_field</item>
        <item name="android:fontFamily">@font/sora_light</item>
    </style>

<!--    Radio Button-->
    <style name="RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_bg</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/sora_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    TextView-->
    <style name="Text16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Text12" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="fontFamily">@font/sora_regular</item>
    </style>

    <style name="Text14" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Text14Grey" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_regular</item>
    </style>

    <style name="Text14BlackRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_regular</item>
    </style>

    <style name="Text14BlackMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_medium</item>
    </style>

    <style name="Text18" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Text20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

</resources>